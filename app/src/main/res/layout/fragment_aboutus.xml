<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_light"
    tools:context=".AboutFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/pink_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/app_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
             />

            <!-- About Us Title -->
            <TextView
                android:id="@+id/about_us_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="26sp"
                android:textColor="@color/pink_deep"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:letterSpacing="0.1"
                android:gravity="center_horizontal" />

            <!-- App Description -->
            <TextView
                android:id="@+id/about_us_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thestorybook is more than just an appâ€”it's a universe of stories waiting to be explored. We provide an immersive platform where stories are brought to life in vivid text and captivating video formats. Whether you're a fan of gripping mysteries, timeless biographies, or heartwarming romances, there's something here for everyone."
                android:textColor="@color/pink_dark"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText" />

            <!-- Mission Statement -->
            <TextView
                android:id="@+id/mission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/pink_deep"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.05"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/mission_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We believe that stories are the key to understanding one another. At thestorybook, our mission is to bridge the gap between creators and audiences by delivering heartfelt, inspiring, and diverse stories. We aim to empower storytellers and build a community where every voice matters."
                android:textColor="@color/pink_dark"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText" />

            <!-- Contact Information -->
            <TextView
                android:id="@+id/contact_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/pink_deep"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/contact_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: support@thestorybook.com\nPhone: 9866623413"
                android:textColor="@color/pink_accent"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>